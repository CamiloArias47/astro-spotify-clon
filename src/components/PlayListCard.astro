---
import {type Playlist} from '@/lib/data' 

interface Props {
    playlist: Playlist
}

const {playlist} = Astro.props
const {id, title, cover, artists, color} = playlist

const artistStr = artists.join(', ')
---

<a class="p-2 transition-all duration-1000 overflow-hidden rounded-lg flex flex-col justify-start gap-5 text-white cursor-pointer hover:bg-zinc-500 shadow-lg hover:shadow-xl ">
    <picture class="h-32 w-32 rounded-md overflow-hidden">
        <img src={cover} alt={title} class=""/>
    </picture>
    <div class="flex flex-auto flex-col truncate">
        <h4 class="text-sm">{title}</h4>
        <span class="artist text-xs text-gray-400">{artistStr}</span>
    </div>
</a>


<style>
    a{
        color: white;
    }
    a:hover{
        background-color: #1a1a1a;
    }
    .artist{
        color: rgb(173, 173, 173);
    }
</style>