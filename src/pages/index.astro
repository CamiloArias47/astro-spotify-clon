---
import PlayListCard from '@/components/PlayListCard.astro'
import Layout from '../layouts/Layout.astro'
import { playlists } from '@/lib/data';
---

<Layout title="Spotify Clone">
	<div id="playlist-container" class="relative transition duration-1000 bg-green-600">
		<!-- <PageHeader /> -->

		<div class="relative z-10 px-6">
			<!-- <Greetings />-->
			<h1 class="text-4xl">Buenos d√≠as</h1>
			<div class="playlist-wrap">
			{
				playlists.map(playlist => <PlayListCard playlist={playlist}/>)
			}
			</div>
		</div>

		<div class="background-gradient absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80">

		</div>
	</div>
</Layout>

<style>
	#playlist-container{
		background-color: #1ed760
	}
	.background-gradient{
		background: linear-gradient(to top, black, transparent);
	}
	.playlist-wrap{
		display: grid;
        grid-template-columns: repeat(3, 1fr);
	}
</style>